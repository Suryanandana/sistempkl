{
	"description": "The CodeIgniter framework",
	"name": "codeigniter/framework",
	"type": "project",
	"homepage": "https://codeigniter.com",
	"license": "MIT",
	"support": {
		"forum": "http://forum.codeigniter.com/",
		"wiki": "https://github.com/bcit-ci/CodeIgniter/wiki",
		"slack": "https://codeigniterchat.slack.com",
		"source": "https://github.com/bcit-ci/CodeIgniter"
	},
	"require": {
		"php": ">=5.3.7",
		"phpmailer/phpmailer": "^6.8"
	},
	"suggest": {
		"paragonie/random_compat": "Provides better randomness in PHP 5.x"
	},
	"require-dev": {
		"robmorgan/phinx": "^0.13.4"
	},

	"scripts": {
		"create-controller": "php application/console/index.php",
		"phinx-init": "php vendor/bin/phinx init",
		"phinx-test": "vendor/bin/phinx test",
		"create-migration": "vendor/bin/phinx create",
		"migrate": "vendor/bin/phinx migrate -e development",
		"rollback": "vendor/bin/phinx rollback -e development",
		"phinx-status": "vendor/bin/phinx/ status -e development",
		"create-seed": "vendor/bin/phinx seed:create",
		"run-seed": "vendor/bin/phinx seed:run",
		"rollback-reset": "vendor/bin/phinx rollback -e development -t 0"
	}
}
